<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    scv.code_value,
                    fd.description_text
                FROM
                    sys_code_values scv,
                    sys_codes sc,
                    fnd_descriptions fd
                WHERE
                    scv.code_id            = sc.code_id AND
                    scv.code_value_name_id = fd.description_id AND
                    sc.code                = ${@code} AND
                    fd.language            = 'ZHS' AND
                    scv.enabled_flag       = 'Y' AND
                    sc.enabled_flag        = 'Y'
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
