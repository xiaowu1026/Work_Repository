<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    um.source_sys_user_id AS emp_id,
                    u.user_name AS emp_name,
                    u.description AS emp_desc
                FROM
                    mbs_core_usermap um,
                    sys_user u
                WHERE
                    um.mapped_user_id = u.user_id AND
                    (
                        u.user_name LIKE '%'
                        || ${@keywords}
                        || '%' OR
                        u.description LIKE '%'
                        || ${@keywords}
                        || '%'
                    )
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
