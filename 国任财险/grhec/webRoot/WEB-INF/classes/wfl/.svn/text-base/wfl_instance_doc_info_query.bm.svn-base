<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
select decode(ww.workflow_category,
              'EXP_REPORT',
              'EXP_REPORT_HEADERS',
              'EXP_REQUISITION',
              'EXP_REQUISITION_HEADERS',
              'PAYMENT_REQUISITION',
              'CSH_PAYMENT_REQUISITION_HDS',
              'BUDGET_JOURNAL',
              'BGT_JOURNAL_HEADERS',
              'CON_CONTRACT',
              'CON_CONTRACT_HEADERS',
              'ACP_REQUISITION',
              'ACP_ACP_REQUISITION_HDS',
              'WFL_APPROVE_RECORD',
              'WORK_ORDER',
              'GLD_WORK_ORDER_HEADERS') as table_name,
       decode(ww.workflow_category,
              'EXP_REPORT',
              wi.instance_param,
              'EXP_REQUISITION',
              wi.instance_param,
              'PAYMENT_REQUISITION',
              wi.instance_param,
              'BUDGET_JOURNAL',
              wi.instance_param,
              'CON_CONTRACT',
              wi.instance_param,
              'ACP_REQUISITION',
              wi.instance_param,
              'WORK_ORDER',
              wi.instance_param,
              wi.instance_id) as header_id
  from wfl_workflow                ww,
       wfl_workflow_instance       wi,
       wfl_instance_node_recipient r
 where r.instance_id = wi.instance_id
       and wi.workflow_id = ww.workflow_id
       and r.record_id = ${/parameter/@record_id}
union all
select decode(ww.workflow_category,
              'EXP_REPORT',
              'EXP_REPORT_HEADERS',
              'EXP_REQUISITION',
              'EXP_REQUISITION_HEADERS',
              'PAYMENT_REQUISITION',
              'CSH_PAYMENT_REQUISITION_HDS',
              'BUDGET_JOURNAL',
              'BGT_JOURNAL_HEADERS',
              'CON_CONTRACT',
              'CON_CONTRACT_HEADERS',
              'ACP_REQUISITION',
              'ACP_ACP_REQUISITION_HDS',
              'WFL_APPROVE_RECORD',
              'WORK_ORDER',
              'GLD_WORK_ORDER_HEADERS',
              'WORK_ORDER',
              'GLD_WORK_ORDER_HEADERS') as table_name,
       decode(ww.workflow_category,
              'EXP_REPORT',
              wi.instance_param,
              'EXP_REQUISITION',
              wi.instance_param,
              'PAYMENT_REQUISITION',
              wi.instance_param,
              'BUDGET_JOURNAL',
              wi.instance_param,
              'CON_CONTRACT',
              wi.instance_param,
              'ACP_REQUISITION',
              wi.instance_param,
              'WORK_ORDER',
              wi.instance_param,
              wi.instance_id) as header_id
  from wfl_workflow                ww,
       wfl_workflow_instance       wi,
       wfl_instance_node_recipient_ht r
 where r.instance_id = wi.instance_id
       and wi.workflow_id = ww.workflow_id
       and r.record_id = ${/parameter/@record_id}
			]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
