<?xml version="1.0" encoding="UTF-8"?>
<ns1:model xmlns:ns1="http://www.aurora-framework.org/schema/bm">
    <ns1:operations>
        <ns1:operation name="query">
            <ns1:query-sql><![CDATA[
				select *
				  from (select e.employee_id,
				               e.employee_code,
				               e.employee_code || '_' || e.name name,
				               (select eou.DESCRIPTION
				                  from exp_employee_assigns ea,
				                       exp_org_position     eop,
				                       exp_org_unit_vl      eou
				                 where eop.position_id = ea.position_id
				                   and ea.employee_id = e.employee_id
				                   and eop.unit_id = eou.unit_id
				                   and ea.enabled_flag = 'Y'
				                   and ea.primary_position_flag = 'Y') unit_name
				          from exp_employees e
				         where exists (select 1
				                  from exp_employee_assigns ea, fnd_companies f
				                 where f.company_id = ea.company_id
				                   and f.company_id = ${/session/@company_id}
				                   and e.employee_id = ea.employee_id
				                   and ea.enabled_flag = 'Y')
				           and exists (select 1
				                  from exp_employee_assigns ea,
				                       exp_employee_jobs    eej,
				                       exp_org_position     eop
				                 where eop.position_id = ea.position_id
				                   and eej.employee_job_id = eop.employee_job_id
				                   and e.employee_id = ea.employee_id
				                   /* and eej.employee_job_code = 'JLNX_ZCGLY' */
				                   and ea.enabled_flag = 'Y')
				           and e.enabled_flag = 'Y') a 
				  #WHERE_CLAUSE#
				 order by a.employee_code


 			]]></ns1:query-sql>
        </ns1:operation>
    </ns1:operations>
    <ns1:fields>
        <ns1:field name="employee_id"/>
        <ns1:field name="employee_code" forDisplay="true" forQuery="true" prompt="EXP_EMPLOYEES.EMPLOYEE_CODE"/>
        <ns1:field name="name" forDisplay="true" forQuery="true" prompt="BGT_BUDGET_RESERVES.EMPLOYEE_ID"/>
        <ns1:field name="unit_name" forDisplay="true" prompt="部门"/>
    </ns1:fields>
    <ns1:query-fields>
        <ns1:query-field field="employee_code" queryOperator="like"/>
        <ns1:query-field name="name" queryExpression="a.name like &apos;%&apos;||${@name}||&apos;%&apos;"/>
    </ns1:query-fields>
</ns1:model>
