<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" xmlns:f="aurora.database.features" alias="fc" baseTable="sys_alert_rule_job_codes">
    <bm:fields>
        <bm:field name="job_code_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="job_code_code" databaseType="VARCHAR2" datatype="java.lang.String" prompt="SYS_ALERT_RULE_JOB_CODES.JOB_CODE_CODE"/>
        <bm:field name="description_id" databaseType="BIGINT" datatype="java.lang.Long" multiLanguage="true" multiLanguageDescField="description"/>
        <bm:field name="description" databaseType="VARCHAR" datatype="java.lang.String" forInsert="false" forUpdate="false" prompt="SYS_ALERT_RULE_JOB_CODES.JOB_CODE_CODE"/>
        <bm:field name="one_time_flag" expression="nvl(jd.one_time_flag, &apos;N&apos;)"/>
        <bm:field name="last_date" databaseType="VARCHAR" datatype="java.lang.String" expression="             (select to_char(a.last_date, &apos;yyyy-mm-dd hh24:mi:ss&apos;)             from user_jobs a             where a.job = jd.job_id)" prompt="SYS_ALERT_RULE_JOBS.LAST_DATE"/>
        <bm:field name="next_date" databaseType="VARCHAR" datatype="java.lang.String" expression="             nvl((select to_char(a.next_date, &apos;yyyy-mm-dd hh24:mi:ss&apos;)             from user_jobs a             where a.job = jd.job_id),             to_char(jd.next_date, &apos;yyyy-mm-dd hh24:mi:ss&apos;))" prompt="SYS_ALERT_RULE_JOBS.NEXT_DATE"/>
        <bm:field name="is_running" databaseType="VARCHAR" datatype="java.lang.String" expression="decode((select 1 from user_jobs_running b where b.job = jd.job_id),1,&apos;Y&apos;,&apos;N&apos;)" prompt="SYS_ALERT_RULE_JOBS.IS_RUNNING"/>
        <bm:field name="total_time" databaseType="NUMBER" datatype="java.lang.Long" expression="(select round(a.total_time, 2) from user_jobs a where a.job = jd.job_id)" prompt="SYS_ALERT_RULE_JOBS.TOTAL_TIME"/>
        <bm:field name="failures" databaseType="NUMBER" datatype="java.lang.Long" expression="(select a.failures from user_jobs a where a.job = jd.job_id)" prompt="SYS_ALERT_RULE_JOBS.FAILURES"/>
        <bm:field name="is_broken" databaseType="VARCHAR" datatype="java.lang.String" expression="(select a.broken from user_jobs a where a.job = jd.job_id)" prompt="SYS_ALERT_RULE_JOBS.IS_BROKEN"/>
    </bm:fields>
    <bm:primary-key>
        <bm:pk-field name="job_code_id"/>
    </bm:primary-key>
    <bm:relations>
        <bm:relation name="jd" joinType="LEFT OUTER" refModel="sys.sys_alert_rule_job_details">
            <bm:reference foreignField="job_code_id" localField="job_code_id"/>
        </bm:relation>
    </bm:relations>
    <bm:query-fields>
        <bm:query-field field="job_code_id" queryExpression="fc.job_code_id=${/parameter/@job_code_id}"/>
    </bm:query-fields>
    <bm:features>
        <f:standard-who/>
        <f:multi-language-storage/>
    </bm:features>
    <bm:ref-fields>
        <bm:ref-field name="hour" prompt="SYS_ALERT_RULE_JOBS.HOUR" relationName="jd" sourceField="hour"/>
        <bm:ref-field name="minute" prompt="SYS_ALERT_RULE_JOBS.MINUTE" relationName="jd" sourceField="minute"/>
        <bm:ref-field name="second" prompt="SYS_ALERT_RULE_JOBS.SECOND" relationName="jd" sourceField="second"/>
    </bm:ref-fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
    			
  SELECT
    /* +rule*/ 
    fc.job_code_id,
    fc.job_code_code,
    fc.description_id,
    (SELECT
        DESCRIPTION_TEXT
    FROM
        fnd_descriptions
    WHERE
        DESCRIPTION_ID=fc.description_id AND
        Language      =${/session/@lang}
    ) AS description,
    NVL(jd.one_time_flag, 'N') AS one_time_flag,
    (SELECT
        TO_CHAR(a.last_date, 'yyyy-mm-dd hh24:mi:ss')
    FROM
        user_jobs a
    WHERE
        a.job = jd.job_id
    ) AS last_date,
    NVL(
    (SELECT
        TO_CHAR(a.next_date, 'yyyy-mm-dd hh24:mi:ss')
    FROM
        user_jobs a
    WHERE
        a.job = jd.job_id
    ), TO_CHAR(jd.next_date, 'yyyy-mm-dd hh24:mi:ss')) AS next_date,
     decode((SELECT /* +rule*/
         COUNT(1)
          FROM user_jobs b
         WHERE b.job = jd.job_id
           AND b.THIS_SEC IS NOT NULL),
        1,
        'Y',
        'N') AS is_running,
    (SELECT ROUND(a.total_time, 2) FROM user_jobs a WHERE a.job = jd.job_id
    ) AS total_time,
    (SELECT a.failures FROM user_jobs a WHERE a.job = jd.job_id
    ) AS failures,
    (SELECT a.broken FROM user_jobs a WHERE a.job = jd.job_id
    ) AS is_broken,
    jd.hour,
    jd.minute,
    jd.second
FROM
    sys_alert_rule_job_codes fc
LEFT OUTER JOIN sys_alert_rule_job_details jd
ON
    fc.job_code_id = jd.job_code_id
#WHERE_CLAUSE#
    		]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
