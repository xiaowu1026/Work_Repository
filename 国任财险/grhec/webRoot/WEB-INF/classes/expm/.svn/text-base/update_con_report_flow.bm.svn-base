            <bm:update-sql><![CDATA[
	            begin
					con_contract_maintenance_pkg.update_con_doc_flows_by_exp
					(
					   'CON_CONTRACT' ,
					   ${@contract_header_id},
					   ${@payment_schedule_line_id},
					   'EXP_REPORT_LINES',
					   ${@exp_report_header_id},
					   ${@exp_report_line_id},			   
