<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
            SELECT *
            FROM( 
                SELECT
                    eo.position_id,
                    em.employee_code
                    ||'-'
                    ||eo.description position_code,
                   fd.description_text unit_name,
                   eou.unit_id
                FROM
                    exp_employee_assigns s,
                    exp_employees em ,
                    exp_org_position_vl eo,
                    exp_org_unit eou,
                    fnd_descriptions fd
                WHERE
                    s.employee_id=NVL((NVL(${@employee_id},
                    (SELECT
                        t.employee_id
                    FROM
                        exp_travel_plan_headers t
                    WHERE
                        t.travel_plan_header_id=${@travel_plan_header_id}
                    ))),
                    ( SELECT u.employee_id FROM sys_user u WHERE u.user_id =${/session/@user_id}
                    ) ) AND
                    s.company_id   =NVL(${@company_id},${/session/@company_id}) AND
                    s.enabled_flag ='Y' AND
                    s.position_id  =eo.position_id AND
                    eo.enabled_flag='Y' AND
                    s.employee_id  =em.employee_id AND
                    eou.unit_id=eo.unit_id AND
                    eou.description_id=fd.description_id
                    and fd.language=${/session/@lang}
                ORDER BY
                    s.primary_position_flag DESC )
            #WHERE_CLAUSE#
            ]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter name="employee_id"/>
                <bm:parameter name="travel_plan_header_id"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="position_id" databaseType="NUMBER" datatype="java.lang.Double" physicalName="POSITION_ID" required="true"/>
        <bm:field name="position_code" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="POSITION_CODE"/>
        <bm:field name="unit_name" databaseType="VARCHAR2" datatype="java.lang.String"/>
        <bm:field name="unit_id" databaseType="NUMBER" datatype="java.lang.Long"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field name="postion_id" queryExpression="eo.position_id=${@postion_id}"/>
        <bm:query-field name="postion_code" queryExpression="position_code=${@postion_code}"/>
    </bm:query-fields>
</bm:model>
