<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT t.*
                FROM (
                      SELECT t.exp_report_header_id,t.company_id,(
                          SELECT fc.company_short_name
                          FROM fnd_companies_vl fc
                          WHERE fc.company_id = t.company_id
                        ) company_name,t.amortization_flag,t.operation_unit_id,t.exp_report_number,t.exp_report_barcode,t.employee_id,ee.name employee_name,t.position_id,t.unit_id,t.payee_category,t.payee_id,t.exp_report_type_id,eet.description exp_report_type_desc,t.expense_user_group_id,t.currency_code,(
                          SELECT currency_name
                          FROM gld_currency_vl gcv
                          WHERE gcv.currency_code = t.currency_code
                        ) currency_name,t.exchange_rate_type,t.exchange_rate_quotation,t.exchange_rate,TO_CHAR (t.report_date, 'yyyy-mm-dd') report_date,t.period_name,t.report_status,aa.code_value_name report_status_desc,t.audit_flag,t.audit_date,t.gld_interface_flag,t.attachment_num,t.description,t.write_off_status,t.write_off_completed_date,t.reversed_flag,t.source_exp_rep_header_id,(
                          SELECT SUM (erl.report_amount)
                          FROM exp_report_lines erl
                          WHERE erl.exp_report_header_id = t.exp_report_header_id
                        ) report_amount,
                        DECODE (t.je_creation_status,'SUCCESS', 'Y','N'
                        ) je_creation_status
                      FROM exp_report_headers t,exp_expense_report_types_vl eet,exp_employees ee,(
                          SELECT scv.code_value,scv.code_value_name
                          FROM sys_codes sc,sys_code_values_vl scv
                          WHERE sc.code_id = scv.code_id
                            AND sc.code = 'EXP_EXPENSE_REPORT_STATUS'
                            AND sc.enabled_flag = 'Y'
                            AND scv.enabled_flag = 'Y'
                        ) aa
                      WHERE  t.report_status in ('COMPLETELY_APPROVED','REJECTED')
                        AND t.exp_report_type_id = eet.expense_report_type_id(+)
                        AND t.employee_id = ee.employee_id(+)
                        AND t.report_status = aa.code_value(+)
                    ) t #WHERE_CLAUSE#
                ORDER BY EXP_REPORT_NUMBER DESC
            ]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter inputPath="/session/@user_id"/>
                <bm:parameter inputPath="/session/@company_id"/>
                <bm:parameter inputPath="/session/@session_id"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="exp_report_header_id" queryExpression="t.exp_report_header_id=${@exp_report_header_id}"/>
        <bm:query-field name="exp_report_type_id" queryExpression="t.EXP_REPORT_TYPE_ID = ${@exp_report_type_id}"/>
        <bm:query-field name="employee_id" queryExpression="t.EMPLOYEE_ID =${@employee_id}"/>
        <bm:query-field name="exp_report_number" queryExpression="t.EXP_REPORT_NUMBER like &apos;%&apos;||${@exp_report_number}||&apos;%&apos;"/>
        <bm:query-field name="report_date_f" queryExpression="t.REPORT_DATE &gt;= ${@report_date_f}"/>
        <bm:query-field name="report_date_t" queryExpression="t.REPORT_DATE &lt;= ${@report_date_t}"/>
        <bm:query-field name="currency_code" queryExpression="t.CURRENCY_CODE like &apos;%&apos;||${@currency_code}||&apos;%&apos;"/>
        <bm:query-field name="requisition_amount_from" queryExpression="(select sum(t.report_amount) from exp_report_lines q where q.exp_report_header_id = t.exp_report_header_id) &gt;=${@requisition_amount_from}"/>
        <bm:query-field name="requisition_amount_to" queryExpression="(select sum(t.report_amount) from exp_report_lines q where q.exp_report_header_id = t.exp_report_header_id)&lt;=${@requisition_amount_to}"/>
        <bm:query-field name="include_created_flag" queryExpression=" ((je_creation_status = &apos;Y&apos; and ${@include_created_flag} = &apos;Y&apos;) or je_creation_status = &apos;N&apos;)"/>
    </bm:query-fields>
</bm:model>
