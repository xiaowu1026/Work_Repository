                    <a:field name="tag_number" prompt="卡片号" readOnly="true"/>
                    <a:field name="description_id"/>
                    <a:field name="cost_source"/>
                    <a:field name="current_cost" prompt="EAM_ASSET_FINANCE_INFO.CURRENT_COST"/>
                    <a:field name="accumulated_dep_amt" prompt="EAM_ASSET_FINANCE_INFO.ACCUMULATED_DEP_AMT"/>
                    <a:field name="impairment_loss_amt" prompt="EAM_ASSET_FINANCE_INFO.IMPAIRMENT_LOSS_AMT"/>
                    <a:field name="transaction_type_id" defaultValue="${/model/eam0920_req_header/record/@transaction_type_id}" prompt="EAM_REQUISITION_TYPES.DEFAULT_TRX_TYPE_DESC"/>
                    <a:field name="trans_type_desc" defaultValue="${/model/eam0920_req_header/record/@trans_type_desc}"/>
                    <a:field name="value_adj_date" prompt="EAM_REQUISITION_LINES.VALUE_ADJ_DATE" readOnly="true"/>
                    <a:field name="pl_amount" prompt="EAM_REQUISITION_VADJ_AUDIT.PL_AMOUNT" readOnly="true"/>
                    <a:field name="description" prompt="AST_REQUISITION_DESC" readOnly="true"/>
                    <a:field name="unit_id" defaultValue="${/model/eam0920_req_header/record/@unit_id}"/>
                    <a:field name="employee_id" defaultValue="${/model/eam0920_req_header/record/@employee_id}"/>
                    <a:field name="position_id" defaultValue="${/model/eam0920_req_header/record/@position_id}"/>
                </a:fields>
