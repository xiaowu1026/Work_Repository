                    <a:textField name="company_name" bindTarget="eam0920_imp_loss_req_audit_form_ds" prompt="机构"/>
                    <a:textField name="unit_name" bindTarget="eam0920_imp_loss_req_audit_form_ds" prompt="部门"/>
