        <a:screenBody>
            <!-- 申请头 -->
            <a:form column="1" title="EAM_REQUISITION_VADJ_CONFIRM.TITLE" width="1024">
                <a:box column="4">
                    <!--<a:comboBox name="org_position" bindTarget="eam0920_imp_loss_req_audit_form_ds"/>
                    <a:textField name="employee_name" bindTarget="eam0920_imp_loss_req_audit_form_ds"/>-->
                    <a:textField name="requisition_number" bindTarget="eam0920_imp_loss_req_audit_form_ds" prompt="单据编号"/>
                    <!--<a:textField name="asset_book_desc" bindTarget="eam0920_imp_loss_req_audit_form_ds"/>-->
                    <a:textField name="requisition_type" bindTarget="eam0920_imp_loss_req_audit_form_ds" prompt="单据类型"/>
                    <a:comboBox name="value_type_desc" bindTarget="eam0920_imp_loss_req_audit_form_ds"/>
                    <a:datePicker name="requisition_date" bindTarget="eam0920_imp_loss_req_audit_form_ds" style="float:left;margin-right: 10px;"/>
