			        var company_id = $('req_query_ds').getAt(0).get('company_id');
			        for (var i=0;i<records.length;i++)
			        {
			            if (i==16)
			            {
			                var fixed_id1 = records[i].get('fixed_id1');
			                var amount1 = records[i].get('amount1');
			                var data = {
			                    fixed_id: fixed_id1,
			                    amount: amount1,
			                    company_id: company_id,
			                    _status: 'insert'
			                };
			                datas.push(data);
			            }
