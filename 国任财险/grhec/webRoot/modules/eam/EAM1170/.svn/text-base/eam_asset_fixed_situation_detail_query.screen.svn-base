			        	|| fixed_id2 == 45 || fixed_id2 == 46 || fixed_id2 == 47 || fixed_id2 == 48
			        	|| fixed_id2 == 55 || fixed_id2 == 56 || fixed_id2 == 57)
			        {
			            return 'amount_nf';
			        }
			        else
			        {
			            return '';
			        }
			    }
			}
