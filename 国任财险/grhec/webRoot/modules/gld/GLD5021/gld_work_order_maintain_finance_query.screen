            <a:dataSet id="maintain_currencylist" loadData="true" model="gld.gld_currency_vl"/>
            <a:dataSet id="exp_exchange_rate_ds" fetchAll="true" model="gld.gld_exchange_rates"/>
            <a:dataSet id="positionlist_ds">
