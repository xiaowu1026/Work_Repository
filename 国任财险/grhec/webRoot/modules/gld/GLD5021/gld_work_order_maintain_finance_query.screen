                    <a:field name="description" prompt="EXP_REPORT_HEADERS.DESCRIPTION"/>
                    <a:field name="created_date_from" datatype="date" validator="dateValidator"/>
                    <a:field name="created_date_to" datatype="date" validator="dateValidator"/>
