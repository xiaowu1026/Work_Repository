                    <a:field name="include_child_flag" checkedValue="Y" defaultValue="Y" prompt="包含下属公司" uncheckedValue="N"/>
                    <a:field name="je_category" displayField="value" options="je_category_ds" returnField="value" valueField="transaction_type_name"/>
                    <a:field name="segment5" autoComplete="true" autoCompleteField="dimension_value_code" lovGridHeight="350" lovHeight="500" lovService="gl.GL2020.dim_value_lov?dimension_code=INTERCOMPANY" lovWidth="500" title="往来段值">
