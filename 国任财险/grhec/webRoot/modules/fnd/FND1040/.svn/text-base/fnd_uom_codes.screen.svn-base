                    <a:textField name="uom_code" bindTarget="fnd_uom_codes_query_ds" typeCase="upper">
                        <a:events>
                            <a:event name="enterdown" handler="queryUomCodes"/>
                        </a:events>
                    </a:textField>
                    <a:textField name="uom_name" bindTarget="fnd_uom_codes_query_ds">
