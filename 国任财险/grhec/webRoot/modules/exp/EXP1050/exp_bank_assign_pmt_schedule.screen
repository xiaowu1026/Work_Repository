            　　    var marginWidth = 35;
            　　    //自适应宽度
            　　    var autoWidth = vw - marginWidth;
            　　    //Form内部宽度，-2border
            　　    var formInnerWidth = autoWidth - 2;
            　　    //所占列数
            　　    var colSpan = 4;
            　　    //设置组件的自适应宽度
            　　    // Ext.get('exp_bank_assigns_fieldSet').setWidth(autoWidth + 4);
            }
            //Ext.fly(window).on('resize', exp_bank_assigns_InitSize);
            exp_bank_assigns_InitSize();
        ]]></script>
    </a:view>
</a:screen>
